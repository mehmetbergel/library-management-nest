{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "paths": {
      "~/*": ["src/*"],
      "ioredis": ["node_modules/ioredis/built/index.js"]
    },
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**",
    "test/**/*",
    "dist/**/*",
    "src/coverage/**/*",
    "old-migrations/**",
    "scripts/**"
  ]
}
